<Window x:Name="MainWondow" x:Class="WpfLayoutStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Canvas layout" Click="Button_Click_1"/>
        <Button Content="StackPanel layout" Grid.Column="1" Grid.Row="1" Click="Button_Click_2"/>
        <Button Content="Button" Grid.Column="2" Grid.Row="2" Click="Button_Click_3"/>
        <Button Content="Explolrer like window" Grid.Row="2" Grid.ColumnSpan="2" Click="Button_Click_4"/>
        <Button Content="ScrollViewer window" Grid.Column="2" Grid.RowSpan="2" Click="Button_Click_5"/>
    </Grid>
</Window>

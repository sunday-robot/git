<Window x:Class="WpfLayoutStudy.DockPanelLayoutStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DockPanelLayoutStudyWindow" Height="300" Width="400" Closing="Window_Closing_1">
    <DockPanel>
        <Button Content="Button" DockPanel.Dock="Top" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left"/>
        <Button Content="Button" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
        <Button Content="Button" DockPanel.Dock="Bottom" VerticalAlignment="Bottom"/>
    </DockPanel>
</Window>

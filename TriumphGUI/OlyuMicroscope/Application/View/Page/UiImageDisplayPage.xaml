                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=19, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=20, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=21, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=22, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=0, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=1, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=2, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=3, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=4, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=5, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=6, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=7, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=8, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=9, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=10, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=11, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=12, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=13, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=14, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=15, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=16, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=17, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=18, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=19, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=20, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=21, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=22, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=23, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=24, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=25, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=26, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=27, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=28, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=29, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridVerticalListNormal, ConverterParameter=30, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Display.IsScaleDisplay, Converter={StaticResource cnvBooleanVisibility}, Mode=Default}" x:Name="grdScaleLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.ScaleLineHorizontalNormal, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleLineVerticalNormal, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateHorizontalNormal, ConverterParameter=0, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateHorizontalNormal, ConverterParameter=1, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateHorizontalNormal, ConverterParameter=2, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateHorizontalNormal, ConverterParameter=3, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateHorizontalNormal, ConverterParameter=4, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateVerticalNormal, ConverterParameter=0, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateVerticalNormal, ConverterParameter=1, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateVerticalNormal, ConverterParameter=2, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateVerticalNormal, ConverterParameter=3, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleSeparateVerticalNormal, ConverterParameter=4, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ScaleLabelNormal, Mode=Default}" />
                    </Grid>
                    <Grid x:Name="grdAFRoiLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.AFRoiRectangleNormal, Mode=Default}" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Visibility="{Binding sUiController.Focus.AFRoiVisibility, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.AFRoiCrossLineHorizontalNormal, Mode=Default}" Visibility="{Binding sUiController.Focus.AFRoiCrossLineVisibility, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.AFRoiCrossLineVerticalNormal, Mode=Default}" Visibility="{Binding sUiController.Focus.AFRoiCrossLineVisibility, Mode=Default}"/>
                    </Grid>
                    <Grid x:Name="grdAERoiLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.AERoiRectangleNormal, Mode=Default}" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Visibility="{Binding sUiController.Exposure.AERoiVisibility, Mode=Default}"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.ImageProcess.WhiteBalanceRoiVisibility, Mode=Default}" x:Name="grdWhiteBalanceRoiLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.WhiteBalanceRoiRectangleNormal, Mode=Default}"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Magnification.ZoomFinalRoiVisibility, Mode=Default}" x:Name="grdZoomRoiLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.ZoomProvisionalRoiRectangle, Mode=Default}" Visibility="{Binding sUiController.Display.ZoomProvisionalRoiVisibility, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.ZoomFinalRoiRectangleNormal, Mode=Default}"/>
                        <Label Content="{Binding sUiController.Display.ZoomRoiString, Mode=Default}" Margin="{Binding sUiController.Display.ZoomRoiLabelMargin, Mode=Default}" HorizontalAlignment="{Binding sUiController.Display.ZoomRoiLabelHorizontalAlignment, Mode=Default}" VerticalAlignment="{Binding sUiController.Display.ZoomRoiLabelVerticalAlignment, Mode=Default}" Opacity="0.8" FontWeight="Bold" Foreground="Red" Background="Gray"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Measurement.LiveMeasurementChecked, Converter={StaticResource cnvBooleanVisibility}, Mode=Default}" x:Name="grdLiveMeasurementLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.MeasurementResultCanvas, Mode=Default}" />
                        <ContentControl Content="{Binding sUiController.Display.TempMeasurementResultCanvas, Mode=Default}" />
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Magnification.CalibrationHorizontalGuideLineVisibility, Mode=Default}" x:Name="grdCalibrationHorizontalGuideLineLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.UpperGuideLine, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LowerGuideLine, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.XCenterGuideLine, Mode=Default}"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Magnification.CalibrationVerticalGuideLineVisibility, Mode=Default}" x:Name="grdCalibrationVerticalGuideLineLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.LeftGuideLine, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.RightGuideLine, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.YCenterGuideLine, Mode=Default}"/>
                    </Grid>
                    <Grid x:Name="grdCanNotRoiZoom" Margin="{Binding sUiController.Magnification.CanNotRoiZoomLabelMargin, Mode=Default}" Background="#00000000" HorizontalAlignment="Left" VerticalAlignment="Top" Height ="65" Width="160" Visibility="{Binding sUiController.Magnification.CanNotRoiZoomLabelVisibility, Mode=Default}">
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="15"/>
                        </Grid.Effect>
                        <Label x:Name="lblCanNotRoiZoom" Content="{Binding sUiController.Magnification.CanNotRoiZoomString, Mode=Default}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="55" Width="150" Foreground="Red" Background="#C0FFFF60" BorderThickness="4"/>
                    </Grid>
                    <Grid x:Name="grdMouseEventAreaLiveCCD" MouseMove="MouseMoveHandler" MouseLeftButtonDown="MouseLeftButtonDownHandler" MouseUp="MouseUpHandler" MouseWheel="MouseWheelHandler" Opacity="0" MouseLeave="MouseLeaveHandler" Background="#FF000000"
                          IsManipulationEnabled="True" ManipulationDelta="MultiTouchDeltaHandler" ManipulationInertiaStarting="ManipulationInertiaStartingHandler" TouchDown="TouchDownHandler"
                          IsEnabled="{Binding sUiController.Display.MouseEventEnabled, Mode=Default}"
                          />
                    <Grid Visibility="{Binding sUiController.Magnification.ZoomRoiExecuteButtonVisibility, Mode=Default}" Margin="{Binding sUiController.Display.ZoomRoiButtonMargin, Mode=Default}" HorizontalAlignment="{Binding sUiController.Display.ZoomRoiButtonHorizontalAlignment, Mode=Default}" VerticalAlignment="{Binding sUiController.Display.ZoomRoiButtonVerticalAlignment, Mode=Default}" Width="{Binding sUiController.Display.ZoomRoiButtonWidth, Mode=Default}" Height="{Binding sUiController.Display.ZoomRoiButtonHeight, Mode=Default}" x:Name="grdRoiZoomExecuteHandlerLiveCCD">
                        <Button x:Name="btnOK" Content="OK" Command="{Binding sUiController.Magnification.RoiZoomExecuteHandler, Mode=Default}" Width="80" Height="30" Margin="-100,0,0,0" Cursor="Arrow" />
                        <Button x:Name="btnCancel" Content="Cancel" Command="{Binding sUiController.Magnification.RoiZoomCancelHandler, Mode=Default}" Width="80" Height="30" Margin="100,0,0,0" Cursor="Arrow" />
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
        <ScrollViewer x:Name="scvScrollStillImage" Width="{Binding sUiController.Display.NormalDisplayStillImageWidth}" Height="{Binding sUiController.Display.NormalDisplayStillImageHeight}" Background="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" 
                      HorizontalScrollBarVisibility="{Binding sUiController.Display.ScrollStillImageHorizontalScrollBarVisibility, Mode=Default}" VerticalScrollBarVisibility="{Binding sUiController.Display.ScrollStillImageVerticalScrollBarVisibility, Mode=Default}" 
                      Grid.ColumnSpan="{Binding sUiController.Display.ScrollStillImageScrollBarGridColumnSpan, Mode=Default}" Grid.RowSpan="{Binding sUiController.Display.ScrollStillImageScrollBarGridRowSpan, Mode=Default}" 
                      Visibility="{Binding sUiController.Display.ScrollStillImageScrollBarVisibility, Mode=Default}" 
                      Grid.Column="{Binding sUiController.Display.ScrollStillImageScrollBarGridColumn, Mode=Default}" Grid.Row="{Binding sUiController.Display.ScrollStillImageScrollBarGridRow, Mode=Default}" Loaded="ScrollStillLoadedHandler" Panel.ZIndex="{Binding sUiController.Display.ScrollStillImageScrollBarZIndex, Mode=Default}" 
					  Margin="{Binding sUiController.Display.StillImageScrollBarMargin, Mode=Default}">
            <Grid x:Name="grdVisibleStillImage" Width="{Binding sUiController.Display.StillImageVisibleWidth, Mode=Default}" Height="{Binding sUiController.Display.StillImageVisibleHeight, Mode=Default}" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid x:Name="grdImageStill" Width="{Binding sUiController.Display.StillImageWidth, Mode=Default}" Height="{Binding sUiController.Display.StillImageHeight, Mode=Default}" Margin="{Binding sUiController.Display.StillImagePosition}">

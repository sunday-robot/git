                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=1, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=2, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=3, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=4, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=5, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=6, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=7, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=8, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=9, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=10, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.LatticeGridHorizontalListNormal, ConverterParameter=11, Converter={StaticResource cnvLineListToLine}, Mode=Default}"/>

<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/composite-font"
    xmlns:utility="clr-namespace:Olympus.LI.Triumph.Application.View.Utility"
    xmlns:CustomControl="clr-namespace:Olympus.LI.Triumph.Application.View.CustomControl"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
	x:Class="Olympus.LI.Triumph.Application.View.UiImageDisplayPage"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight"
	Width="1024" Height="1024"
	WindowWidth="640" WindowHeight="480">

    <Page.Resources>
        <utility:EnumBooleanConverter x:Key="cnvEnumBoolean"/>
        <utility:LineListToLineConverter x:Key="cnvLineListToLine"/>
        <utility:BooleanVisibilityConverter x:Key="cnvBooleanVisibility"/>
        <!-- ステージ制御用８方向ボタンスタイル -->
        <Style x:Key="EightButtonStyle" BasedOn="{x:Null}" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Background="{TemplateBinding Background}">
                            <Rectangle d:LayoutOverrides="Width, Height" Fill="#02696969" Stroke="#FF000000" StrokeThickness="0"/>
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True"/>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle SnapsToDevicePixels="true" Stroke="Black" StrokeDashArray="1 2" StrokeThickness="1" Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="ButtonNormalBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#EBEBEB" Offset="0.5"/>
            <GradientStop Color="#DDDDDD" Offset="0.5"/>
            <GradientStop Color="#CDCDCD" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF707070"/>
    </Page.Resources>
    <Grid x:Name="grdImageDisplay" Stylus.IsPressAndHoldEnabled="False" Stylus.IsFlicksEnabled="False" Width="1024" Height="1024" Visibility="{Binding sUiController.Display.ImageDisplayVisibility, Mode=Default}" IsEnabled="{Binding sUiController.Display.ImageDisplayEnable, Mode=Default}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer x:Name="scvScrollLiveCCD" Width="{Binding sUiController.Display.NormalDisplayWidth}" Height="{Binding sUiController.Display.NormalDisplayHeight}" Background="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" 
                      Grid.Column="{Binding sUiController.Display.ScrollLiveCCDScrollBarGridColumn, Mode=Default}" Grid.Row="{Binding sUiController.Display.ScrollLiveCCDScrollBarGridRow, Mode=Default}" 
                      HorizontalScrollBarVisibility="{Binding sUiController.Display.ScrollLiveCCDHorizontalScrollBarVisibility, Mode=Default}" VerticalScrollBarVisibility="{Binding sUiController.Display.ScrollLiveCCDVerticalScrollBarVisibility, Mode=Default}" 
                      Grid.RowSpan="{Binding sUiController.Display.ScrollLiveCCDScrollBarGridRowSpan, Mode=Default}" Grid.ColumnSpan="{Binding sUiController.Display.ScrollLiveCCDScrollBarGridColumnSpan, Mode=Default}" Visibility="{Binding sUiController.Display.ScrollLiveCCDScrollBarVisibility, Mode=Default}" 
					  Loaded="ScrollLiveCCDLoadedHandler" Panel.ZIndex="{Binding sUiController.Display.ScrollLiveCCDScrollBarZIndex, Mode=Default}" Margin="{Binding sUiController.Display.LiveCCDScrollBarMargin, Mode=Default}">
            <Grid x:Name="grdVisibleLiveCCD" Width="{Binding sUiController.Display.VisibleWidth, Mode=Default}" Height="{Binding sUiController.Display.VisibleHeight, Mode=Default}" ClipToBounds="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
               <Grid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderZMoveRough, Mode=Default}" Command="{Binding sUiController.Display.ZMoveRoughHandler, Mode=Default}" IsChecked="{Binding sUiController.Display.SelectedContextItem, ConverterParameter=ZRoughMove, Converter={StaticResource cnvEnumBoolean}, Mode=Default}" IsEnabled="{Binding sUiController.Display.ContextMenuZMoveRoughEnable, Mode=Default}"/>
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderZMoveDetail, Mode=Default}" Command="{Binding sUiController.Display.ZMoveDetailHandler, Mode=Default}" IsChecked="{Binding sUiController.Display.SelectedContextItem, ConverterParameter=ZDetailMove, Converter={StaticResource cnvEnumBoolean}, Mode=Default}" IsEnabled="{Binding sUiController.Display.ContextMenuZMoveDetailEnable, Mode=Default}"/>
                        <Separator />
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderBrightness, Mode=Default}" Command="{Binding sUiController.Display.BrightnessHandler, Mode=Default}" IsChecked="{Binding sUiController.Display.SelectedContextItem, ConverterParameter=Brightness, Converter={StaticResource cnvEnumBoolean}, Mode=Default}" IsEnabled="{Binding sUiController.Display.ContextMenuBrightnessEnable, Mode=Default}"/>
                        <Separator />
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderZoom, Mode=Default}" Command="{Binding sUiController.Display.ZoomHandler, Mode=Default}" IsChecked="{Binding sUiController.Display.SelectedContextItem, ConverterParameter=Zoom, Converter={StaticResource cnvEnumBoolean}, Mode=Default}" IsEnabled="{Binding sUiController.Display.ContextMenuZoomEnable, Mode=Default}"/>
                        <Separator Visibility="{Binding sUiController.Display.LatticeGridListNormalLiveCCDVisibility, Mode=Default}"/>
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderLatticeGridLarge, Mode=Default}" Visibility="{Binding sUiController.Display.LatticeGridListNormalLiveCCDVisibility, Mode=Default}" Command="{Binding sUiController.Display.LatticeGridLargeHandler, Mode=Default}"/>
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderLatticeGridMiddle, Mode=Default}" Visibility="{Binding sUiController.Display.LatticeGridListNormalLiveCCDVisibility, Mode=Default}" Command="{Binding sUiController.Display.LatticeGridMiddleHandler, Mode=Default}"/>
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderLatticeGridSmall, Mode=Default}" Visibility="{Binding sUiController.Display.LatticeGridListNormalLiveCCDVisibility, Mode=Default}" Command="{Binding sUiController.Display.LatticeGridSmallHandler, Mode=Default}"/>
                        <MenuItem Header="{Binding sUiController.Display.MenuHeaderLatticeGridTiny, Mode=Default}" Visibility="{Binding sUiController.Display.LatticeGridListNormalLiveCCDVisibility, Mode=Default}" Command="{Binding sUiController.Display.LatticeGridTinyHandler, Mode=Default}"/>
                    </ContextMenu>
                </Grid.ContextMenu>
                <Grid x:Name="grdImageLiveCCD" Width="{Binding sUiController.Display.ImageWidth, Mode=Default}" Height="{Binding sUiController.Display.ImageHeight, Mode=Default}" Margin="{Binding sUiController.Display.ImagePosition}">
                    <Image x:Name="imgImageLiveCCD" Width="{Binding sUiController.Display.BitmapWidth, Mode=Default}" Height="{Binding sUiController.Display.BitmapHeight, Mode=Default}" Source="{Binding sUiController.Display.ImageUpdateNormal, Mode=Default}" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="grdUtilityLiveCCD"  Cursor="{Binding sUiController.Display.MouseCursor, Mode=Default}">
                    <Grid Visibility="{Binding sUiController.Display.IsImageFrameScaleVisible, Converter={StaticResource cnvBooleanVisibility}, Mode=Default}" x:Name="grdImageFrameScaleLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.ImageFrameScale, Mode=Default}"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Display.ProfileVisible, Mode=Default}" HorizontalAlignment="Stretch" x:Name="grdProfileLineLiveCCD" VerticalAlignment="Stretch">
                        <ContentControl Content="{Binding sUiController.Display.ProfileLine, Mode=Default}"/>
                        <ContentControl RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom" Height="256" Content="{Binding sUiController.Display.ProfileData, Mode=Default}">
                            <ContentControl.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="-1"/>
                                    <SkewTransform AngleX="0" AngleY="0"/>
                                    <RotateTransform Angle="0"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </ContentControl.RenderTransform>
                        </ContentControl>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Display.CrossLineLiveCCDVisibility, Mode=Default}" x:Name="grdCrossLineLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.CrossLineHorizontalNormal, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.CrossLineVerticalNormal, Mode=Default}"/>
                    </Grid>
                    <Grid Visibility="{Binding sUiController.Display.CircleGridLiveCCDVisibility, Mode=Default}" x:Name="grdCircleGridLiveCCD">
                        <ContentControl Content="{Binding sUiController.Display.CircleGridHorizontalNormal, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.CircleGridVerticalNormal, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.Circle1Normal, Mode=Default}"/>
                        <ContentControl Content="{Binding sUiController.Display.Circle2Normal, Mode=Default}"/>

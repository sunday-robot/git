	x:Name="Window"
	Title="UiMessageDialog"
    ResizeMode="NoResize"
	Width="645" Height="300" AllowsTransparency="True" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="None" Background="{x:Null}" Topmost="False"
